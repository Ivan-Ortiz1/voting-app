<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Lista de Temas</title>
  <link rel="stylesheet" href="/css/estilos.css">
</head>
<body>
  <h1>Lista de Temas de Aprendizaje</h1>

  <!-- Mostrar mensaje de error si existe -->
  <% if (typeof error !== "undefined") { %>
    <p style="color:red;"><%= error %></p>
  <% } %>

  <!-- Formulario para agregar un nuevo tema -->
  <form id="form-agregar" action="/temas/agregar" method="POST">
    <input type="text" name="titulo" placeholder="Nuevo tema" required>
    <button type="submit">Agregar</button>
  </form>

  <!-- Lista de temas -->
  <ul id="lista-temas">
    <% temas.forEach(t => { %>
      <li id="tema-<%= t.id %>">
        <strong><%= t.titulo %></strong> — 
        <span class="contador-votos"><%= t.votos %></span> votos
        <a href="/temas/editar/<%= t.id %>">Editar</a>
        <form action="/temas/eliminar/<%= t.id %>" method="POST" style="display:inline;">
          <button type="submit">Eliminar</button>
        </form>
        <button class="btn-votar" data-id="<%= t.id %>">Votar</button>
      </li>
    <% }) %>
  </ul>

  <p><a href="/">Volver al inicio</a></p>

  <!-- Script para votación en tiempo real -->
  <script src="/js/votacion.js"></script>
</body>
</html>
