<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Lista de Temas</title>
  <link rel="stylesheet" href="/css/estilos.css">
</head>
<body>
  <h1>Lista de Temas de Aprendizaje</h1>

  <!-- Mostrar mensaje de error si existe -->
  <% if (typeof error !== "undefined") { %>
    <p style="color:red;"><%= error %></p>
  <% } %>

  <!-- Formulario para agregar un nuevo tema -->
  <form id="form-agregar" action="/temas/agregar" method="POST">
    <input type="text" name="titulo" placeholder="Nuevo tema" required>
    <button type="submit">Agregar</button>
  </form>

  <!-- Lista de temas con edición inline, votación AJAX y enlace a edición completa -->
  <ul id="lista-temas">
    <% temas.forEach(t => { %>
      <li id="tema-<%= t.id %>" class="tema-item">
        <input type="text" class="titulo-tema" value="<%= t.titulo %>">
        <button class="btn-guardar-tema" data-id="<%= t.id %>">Guardar</button>

        <span class="contador-votos"><%= t.votos %></span> votos
        <button class="btn-votar-tema" data-id="<%= t.id %>">Votar</button>

        <!-- Botón de eliminar -->
        <form action="/temas/eliminar/<%= t.id %>" method="POST" style="display:inline;">
          <button type="submit">Eliminar</button>
        </form>

        <!-- Nuevo botón para ir a la vista de edición completa -->
        <a href="/temas/editar/<%= t.id %>" class="btn-editar">Enlaces</a>
      </li>
    <% }) %>
  </ul>


  <!-- Scripts para interactividad en tiempo real -->
  <script type="module" src="/js/utilidades.js"></script>
  <script type="module" src="/js/temas.js"></script>
</body>
</html>
