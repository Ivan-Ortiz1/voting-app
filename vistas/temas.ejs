<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Lista de Temas</title>
  <link rel="stylesheet" href="/css/estilos.css">
</head>
<body>
  <h1>Lista de Temas de Aprendizaje</h1>

  <!-- Formulario para agregar un nuevo tema -->
  <form action="/temas/agregar" method="POST">
    <input type="text" name="titulo" placeholder="Nuevo tema" required>
    <button type="submit">Agregar</button>
  </form>

  <!-- Lista de temas -->
  <ul>
    <% temas.forEach(t => { %>
      <li>
        <strong><%= t.titulo %></strong> â€” Votos: <%= t.votos %>
        <a href="/temas/editar/<%= t.id %>">Editar</a>
      </li>
    <% }) %>
  </ul>

  <p><a href="/">Volver al inicio</a></p>
</body>
</html>
